# Flow Planner Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# REQUIRED API KEYS
# ============================================================================

# Google Gemini API Key (for workflow planning and guide generation)
# Get yours at: https://aistudio.google.com/app/apikey
# Free tier available
GEMINI_API_KEY=your_gemini_api_key_here

# Anthropic Claude API Key (for Browser-Use agent and vision refinement)
# Get yours at: https://console.anthropic.com/
# $5 free credit available
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Flask Secret Key (for session management)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_minimum_32_characters_here

# ============================================================================
# FLASK CONFIGURATION
# ============================================================================

# Server port (Railway sets this automatically in production)
PORT=5000

# Flask environment (production or development)
FLASK_ENV=development

# Debug mode (NEVER set to True in production)
DEBUG=False

# ============================================================================
# BROWSER CONFIGURATION
# ============================================================================

# Run browser in headless mode (no visible window)
HEADLESS_BROWSER=True

# Save browser profile for persistent authentication
# Set to True to keep logged-in sessions between runs
USE_PERSISTENT_CONTEXT=False

# Browser user data directory (if USE_PERSISTENT_CONTEXT=True)
# Leave empty for default location
BROWSER_USER_DATA_DIR=

# ============================================================================
# BROWSER-USE AGENT CONFIGURATION
# ============================================================================

# Maximum steps the browser agent can take
BROWSER_USE_MAX_STEPS=50

# LLM model for Browser-Use agent
# Options: claude-sonnet-4-5-20250929, claude-sonnet-4, claude-opus-4
BROWSER_USE_LLM_MODEL=claude-sonnet-4-5-20250929

# Browser-Use agent temperature (0.0 to 1.0)
BROWSER_USE_TEMPERATURE=0.1

# ============================================================================
# REFINEMENT CONFIGURATION
# ============================================================================

# Enable vision-based workflow refinement
ENABLE_REFINEMENT=True

# Automatically run refinement after guide generation
REFINEMENT_AUTO=True

# Primary vision model for refinement
# Options: claude-sonnet-4-5-20250929, claude-opus-4, claude-sonnet-4
REFINEMENT_MODEL=claude-sonnet-4-5-20250929

# Fallback model if primary fails
REFINEMENT_FALLBACK=claude-sonnet-4

# Grid size for UI element detection (NxN grid overlay)
REFINEMENT_GRID_SIZE=5

# Padding around detected elements (percentage)
REFINEMENT_PADDING=5

# ============================================================================
# OPTIONAL AUTHENTICATION CREDENTIALS
# ============================================================================

# Default email for Browser-Use auto-login (Tier 2 authentication)
# Leave empty to disable auto-login
DEFAULT_EMAIL=

# Default password for Browser-Use auto-login
# Leave empty to disable auto-login
DEFAULT_PASSWORD=

# Manual login timeout in seconds (Tier 3 authentication)
MANUAL_LOGIN_TIMEOUT=60

# ============================================================================
# OUTPUT CONFIGURATION
# ============================================================================

# Directory for captured workflow outputs
OUTPUT_DIR=outputs

# Directory for generated guides
GUIDES_DIR=guides

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file location
LOG_FILE=logs/app.log

# ============================================================================
# DEPLOYMENT (SET BY PLATFORM)
# ============================================================================

# These are typically set automatically by Railway, Heroku, etc.
# Only uncomment if deploying manually

# DATABASE_URL=
# REDIS_URL=
# PYTHONUNBUFFERED=1
